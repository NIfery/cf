	<insert id="CommentsWrite" parameterType="CommentsVO">
			<selectKey resultType="int" keyProperty="CommentNo" order="BEFORE">
			select comments_seq.nextval from dual
			</selectKey>
		insert into comments(comment_no,user_name,comment_content,comment_regdate,board_no,COMMENT_GROUPNO)
		values(#{CommentNo},#{UserName},#{CommentContent},sysdate,#{BoardNo},#{CommentNo})
	</insert>
	
	<update id="CommentsUpdate" parameterType="CommentsVO">
		update comments
 		set comment_content=#{CommentContent}
 		where comment_no=#{CommentNo}
	</update>
	
	<delete id="CommentsDelete" parameterType="int">
		delete comments
		where comment_no = #{CommentNo}
	</delete>
	
	<select id="CommentsCount" resultType="map">
		select count,board_No
		from Count
	</select>
	
	<insert id="CommentsReply" parameterType="CommentsVO">
		insert into comments(comment_no,user_name,comment_content,comment_regdate,board_no,COMMENT_STEP,COMMENT_SORTNO,COMMENT_GROUPNO)
		values(comments_seq.nextval,#{UserName},#{CommentContent},sysdate,#{BoardNo},#{CommentStep}+1,#{CommentSortNo}+1,#{CommentGroupNo})
	</insert>
	
	<update id="UpdateSortNo" parameterType="CommentsVO">
	 	update comments
	 	set COMMENT_SORTNO=COMMENT_SORTNO+1
	 	where COMMENT_GROUPNO=#{CommentGroupNo} and COMMENT_SORTNO > #{CommentSortNo}
	 </update>
</mapper>









